{% extends 'base.html.twig' %}

{% block title %}Nos produits{% endblock %}

{% block body %}
    <div class="container container2">
        <h1 class="display-2 text-center mb-4 mt-4">Recherche</h1>
        <div class="container">
            <div class="jumbotron mt-3">

                {{ form_start(form) }}

                <div class="form-row align-items-end">
                    <div class="col">
                        {{ form_row(form.nom) }}

                    </div>

                    <div class="col">
                        <div class="form-group">
                            <button type="submit" class="btn btn-success">Rechercher</button>
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}


                <div class="container-fluid">
                    {% if produits %}
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Image</th>
                                <th class="text-center">Go!</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for produit in produits %}
                                <tr>

                                    <td>{{ produit.nom }}</td>
                                    <td><img src="/uploads/{{ produit.image }}" style="height:50px; width:50px"></td>
                                    <td class="text-center">
                                        <a href="{{ path('produit_show', {'slug':produit.slug}) }}" class="btn btn-success"><i
                                                    class="fas fa-external-link-square-alt"></i></a>

                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    {% endif %}


                </div>
            </div>
        </div>
    </div>




{% endblock %}