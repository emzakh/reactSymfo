{% extends 'base.html.twig' %}

{% block title %}Nos produits{% endblock %}

{% block body %}

    <section id="produitGallery">
        <div class="container container2">
            <div class="gallery col-lg-12 col-md-12 col-sm-12 col-xs-12 mx-auto">
                <h1 class="display-2 text-center mb-4">Ingrédients</h1>
            </div>
            <div class="text-center">
                <a href={{ path('produits_index') }} class="btn btn-default filter-button">All</a>
                <a href={{ path('produits_index', {'categorie' : 'Jardin'}) }} class="btn btn-default filter-button">Jardin</a>
                <a href={{ path('produits_index', {'categorie' : 'Potager'}) }} class="btn btn-default filter-button">Potager</a>
                <a href={{ path('produits_index', {'categorie' : 'Epices'}) }} class="btn btn-default filter-button">Epices</a>
            </div>



                    <div class="gallery_product">
                        {% for produit in pagination.data %}
                        {% set url = path('produit_show', {'slug': produit.slug}) %}
                        <div class="card m-2 cardProduit" style="width: 350px;">
                            <img class="card-img-top " src="/uploads/{{ produit.image }}" alt="Card image cap" style="height:200px; object-fit: contain;">
                            <div class="card-body">
                                <h1>Nom du produit : </h1> {{ produit.nom }}
                                <h1>Catégorie: </h1> {{ produit.categorie }}
                                <p class="mt-3"><a href="{{ url }}" class="btn btn-default filter-button">En savoir plus</a></p>
                            </div>
                        </div>
                        {% endfor %}
                    </div>


        </div>
    </section>
    {{ pagination.display() }}

{% endblock %}