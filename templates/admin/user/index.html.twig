{% extends 'admin/base.html.twig' %}

{% block title %}Administration des membres{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Gestion des membres</h1>

        <table class="table table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Pr√©nom</th>
                <th>Nom</th>
                <th class="text-center">Actions</th>

            </tr>
            </thead>
            <tbody>
            {% for user in pagination.data %}
                <tr>
                    <td>{{user.id}}</td>
                    <td>{{user.firstName}}</td>
                    <td>{{user.lastName}}</td>

                    <td class="text-center">
                        <a href="{{path('user_show', {'slug':user.slug})}}" class="btn btn-success"><i class="fas fa-edit"></i></a>

                        <a href="{{path('admin_users_delete', {'id':user.id})}}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {{ pagination.display() }}

    </div>
{% endblock %}